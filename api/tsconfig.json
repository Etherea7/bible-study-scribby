{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": false,
        "noEmit": true,
        "resolveJsonModule": true
    },
    "include": [
        "./*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}